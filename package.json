{
  "name": "@sierralabs/nest-workflow",
  "version": "0.1.36",
  "description": "",
  "author": "Sierra Labs",
  "license": "Sierra Labs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "npm run prestart:prod",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:mocks": "TZ=UTC jest --config ./test/mocks/jest-mocks.json",
    "db:migrate:new": "npm run prestart:prod && ts-node ./node_modules/typeorm/cli.js migration:generate -n",
    "db:migrate:up": "npm run prestart:prod && ts-node ./node_modules/typeorm/cli.js migration:run",
    "db:migrate:down": "npm run prestart:prod && ts-node ./node_modules/typeorm/cli.js migration:revert",
    "db": "docker-compose up --build -d && npm run db:migrate:up",
    "mocks": "NODE_ENV=development npm run test:mocks"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/typeorm": "^5.3.0",
    "@sierralabs/nest-identity": "^0.2.9",
    "@sierralabs/nest-utils": "0.0.16",
    "aws-sdk": "^2.413.0",
    "class-transformer": "^0.2.0",
    "docxtemplater": "^3.13.6",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "jszip": "^2.6.1",
    "mime-types": "^2.1.24",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "s3-proxy": "^1.1.1",
    "typeorm": "^0.2.16",
    "typescript": "^3.0.1",
    "uuid": "^3.3.2",
    "xstate": "^4.6.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.133",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
